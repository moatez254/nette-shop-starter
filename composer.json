{
    "name": "moatez254/nette-shop-starter",
    "description": "Starter REST API with Nette 3 (Products) + SQLite + Docker + Tests + CI",
    "type": "project",
    "require": {
      "php": "^8.2",
      "nette/application": "^3.1",
      "nette/bootstrap": "^3.1",
      "nette/di": "^3.1",
      "nette/http": "^3.2",
      "nette/database": "^3.2",
      "tracy/tracy": "^2.10",
      "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
      "phpunit/phpunit": "^10.5",
      "phpstan/phpstan": "^2.1",
      "squizlabs/php_codesniffer": "^3.9"
    },
    "autoload": {
      "classmap": ["app/"],
      "psr-4": { "App\\": "app/" }
    },
    "scripts": {
      "start": "php -S 0.0.0.0:8000 -t www",
      "test": "phpunit",
      "lint": "phpcs --standard=PSR12 app",
      "stan": "phpstan analyse app --level=max"
    }
  }
