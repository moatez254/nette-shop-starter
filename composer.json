{
  "name": "moatez254/nette-shop-starte",
  "description": "Professional REST API starter built with Nette 3 framework - includes comprehensive testing, CI/CD, and OpenAPI documentation",
  "type": "project",
  "license": "MIT",
  "keywords": [
    "nette",
    "rest-api",
    "php8",
    "sqlite",
    "docker",
    "testing",
    "openapi"
  ],
  "authors": [
    {
      "name": "Your Name",
      "email": "your.email@example.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "nette/application": "^3.1",
    "nette/bootstrap": "^3.1",
    "nette/di": "^3.1",
    "nette/http": "^3.2",
    "nette/database": "^3.2",
    "tracy/tracy": "^2.10",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.11",
    "squizlabs/php_codesniffer": "^3.9",
    "php-coveralls/php-coveralls": "^2.5"
  },
  "autoload": {
    "classmap": ["app/"],
    "psr-4": { "App\\": "app/" }
  },
  "autoload-dev": {
    "psr-4": { "Tests\\": "tests/" }
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "test:coverage": "phpunit --coverage-html coverage --coverage-clover coverage.xml",
    "test:coverage-text": "phpunit --coverage-text",
    "stan": "phpstan analyse app tests --memory-limit=1G",
    "lint": "phpcs --standard=PSR12 app tests",
    "lint:fix": "phpcbf --standard=PSR12 app tests",
    "check": [
      "@lint",
      "@stan",
      "@test"
    ],
    "ci": [
      "@lint",
      "@stan",
      "@test:coverage"
    ],
    "post-install-cmd": [
      "mkdir -p var/log",
      "mkdir -p var/temp"
    ]
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "php-coveralls/php-coveralls": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
